<% layout("/layouts/boilerplate.ejs") %>
    <!-- <h3 class="mt-3">All listings</h3> -->
    <!-- <form method="GET" action="/listings/new">
        <button>Add listings</button>
    </form> -->
    <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }
      .filter{
        text-align: center;
        margin-top: 2rem;
        margin-right: 2rem;
        opacity: 0.7;
        
      }
      .filter:hover{
        opacity: 1;
        border-bottom: 1px solid black;
        cursor: pointer;
      }
      .filter p{
        font-size: 0.8rem;
      }
      .tax-info{
        display: none;
      }
      .tax-toggle{
        border: 1px solid rgba(0, 0, 0, 0.448);
        border-radius: 10px;
        padding: 0.7rem;
        height: 3rem;
        width: 13rem;
        font-size: 0.8rem;
        margin-left: 5rem;
      }
    </style>

    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farm-house</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Swimming Pool</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></i></div>
        <p>Bedrooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Top of the world</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-sailboat"></i></div>
        <p>Boats</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-skating"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-house"></i></div>
        <p>Tiny homes</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" >
        <% for (let listing of allListings){ %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card" >
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="..." style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%=listing.title%></b><br>
                        <i><%=listing.description%></i><br>
                        <b>&#8377; <%=listing.price.toLocaleString("en-IN") %>/night</b>
                        <i class="tax-info">&nbsp; +18% GST</i>
                      </p>
                    </div>
                  </div>
            </a>
          <% } %>
    </div>

<script>
  let tagSwitch = document.getElementById("flexSwitchCheckDefault");
  tagSwitch.addEventListener("click", ()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    for(let info of taxInfo){
      if(info.style.display !== "inline"){
        info.style.display="inline";
      }
      else{
        info.style.display = "none";
      }
    }
    
  })
</script>